generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  name      String?
  image     String?
  createdAt DateTime @default(now())

  emails Email[]
  tasks  Task[]
  gmailAccount GmailAccount?
}

model Email {
  id           String         @id @default(cuid())
  idEmail      String         @unique // ID externo del email (del JSON)
  from         String
  subject      String
  body         String
  receivedAt   DateTime       @default(now())
  createdAt    DateTime       @default(now()) // Fecha de importación del email
  processedAt  DateTime?      // Null = no procesado, fecha = procesado en esa fecha
  approvedAt   DateTime?      // Null = no aprobado aún, fecha = aprobado en esa fecha
  metadata     EmailMetadata?
  rejectionReason  String?    // Motivo del último rechazo (checkbox o texto libre)
  previousAIResult Json?      // Snapshot JSON del análisis IA descartado

  // Asociación por usuario (multiusuario)
  userId String
  user   User @relation(fields: [userId], references: [id], onDelete: Cascade)

  isProcessable Boolean @default(true)
  @@index([from])
  @@index([subject])
  @@index([processedAt])
  @@index([approvedAt])
  @@index([processedAt, approvedAt])
  @@index([receivedAt])
  @@index([createdAt])
  @@index([idEmail])
  @@index([userId, receivedAt])
}

model EmailMetadata {
  id              String  @id @default(cuid())
  emailId         String  @unique
  category        String?
  priority        String?
  summary         String?        // Resumen IA (5-100 chars)
  contactName     String?        // Nombre de contacto inferido
  hasTask         Boolean @default(false)
  taskDescription String?
  taskStatus      String?
  createdAt       DateTime @default(now())
  email           Email   @relation(fields: [emailId], references: [id], onDelete: Cascade)
  tasks           Task[]         // Relación 1:N con tareas extraídas por IA

  @@index([category])
  @@index([priority])
  @@index([hasTask])
  @@index([taskStatus])
  @@index([emailId])
  @@index([createdAt])
  @@index([category, priority, hasTask, taskStatus])
}

model Task {
  id              String         @id @default(cuid())
  emailMetadataId String
  emailMetadata   EmailMetadata  @relation(fields: [emailMetadataId], references: [id], onDelete: Cascade)
  description     String
  dueDate         DateTime?
  tags            String[]       // etiquetas temáticas (máx 3 sugeridas por IA)
  participants    String[]       // lista de emails involucrados
  createdAt       DateTime       @default(now())
  status          String         @default("todo") // 'todo' | 'doing' | 'done'

  // Asociación por usuario (multiusuario)
  userId String
  user   User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([emailMetadataId])
  @@index([status])
  @@index([userId, status])
}

model Contact {
  id        String   @id @default(cuid())
  email     String   @unique
  name      String?
  createdAt DateTime @default(now())
}

model Tag {
  id          String   @id @default(cuid())
  descripcion String   @unique
  createdAt   DateTime @default(now())

  @@index([descripcion])
}


model GmailAccount {
  id           String   @id @default(cuid())
  userId       String   @unique
  accessToken  String
  refreshToken String
  scope        String
  tokenType    String
  expiryDate   DateTime
  lastSyncAt   DateTime?
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
}
